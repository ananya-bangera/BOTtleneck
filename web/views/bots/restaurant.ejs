    <style>
      main {
        display: grid;
        grid-template-columns: 30% 50%;
        justify-content: space-evenly;
        max-height: 700px;
        background-color: rgba(255, 255, 255, 0.2);
        padding: 30px;
        margin: 30px;
      }
      .icon {
        font-size: 150px;
        color: white;
        display: flex;
        justify-content: center;
        align-content: center;
        margin: 20px auto;
      }
      .left button {
        display: block;
        margin: auto auto;
        background-color: blue;
        color: white;
        border-radius: 3px;
        border: none;
        font-size: 20px;
        padding: 10px;
      }
      .left button:hover,
      img:hover {
        box-shadow: 0px 2px 15px 0px whitesmoke,
          inset 0px 2px 10px rgb(86, 86, 255);
      }
      .left a {
        text-decoration: none;
        /* background-color: blue; */
      }
      img {
        display: block;
        max-width: 70%;
        margin: auto auto;
        border-radius: 50%;
        border: 1px solid white;
      }
      .right {
        height: 100%;
        width: 100%;
        background-color: black;
        box-shadow: 2px 2px 20px 0px aqua;
        display: flex;
        flex-direction: column;
        align-content: center;
      }
      .right h2 {
        color: white;
        background-color: #222;
        text-align: center;
        padding: 10px;
        margin-bottom: 0px;
        border-bottom: 1px solid white;
      }
      .chats {
        height: 85%;
        background-color: black;
        margin-top: 0px;
      }
      .message {
        border-top: 1px solid white;
        padding: 10px;
        margin-bottom: 5px;
        background-color: #222;
      }
      input {
        display: inline-block;
        margin-top: 10px;
        margin-left: 20px;
        font-size: 1.2rem;
        width: 80%;
        margin-bottom: 5px;
        outline: none;
        padding: 5px;
      }
      input:focus {
        background-color: antiquewhite;
      }
      hr {
        width: 80%;
        margin-left: 20px;
      }
      button i {
        font-size: 20px;
      }
      .right button {
        margin-left: 10px;
        border: none;
        padding: 3px 10px;
      }
      button:hover {
        cursor: pointer;
        box-shadow: 2px 2px 10px 0px orange;
      }
      .chats {
        overflow-y: auto;
        min-height: 400px;
        max-height: 400px;
        padding: 20px;
      }
      .bot {
        background-color: white;
        color: black;
        max-width: 80%;
        padding: 10px;
        border-radius: 5px;
        margin-top: 10px;
        float: left;
        clear: both;
        max-height: 200px;
        overflow-y: auto;
      }
      .bot::-webkit-scrollbar {
        width: 10px; /* width of the entire scrollbar */
      }

      .bot::-webkit-scrollbar-track {
        background: blue; /* color of the tracking area */
      }

      .bot::-webkit-scrollbar-thumb {
        background-color: orange; /* color of the scroll thumb */
        border-radius: 20px; /* roundness of the scroll thumb */
        border: 3px solid blue; /* creates padding around scroll thumb */
      }
      .client {
        background-color: purple;
        color: white;
        max-width: 80%;
        padding: 10px;
        border-radius: 5px;
        float: right;
        clear: both;
        margin-top: 10px;
      }
      .chats::-webkit-scrollbar {
        width: 12px; /* width of the entire scrollbar */
      }

      .chats::-webkit-scrollbar-track {
        background: orange; /* color of the tracking area */
      }

      .chats::-webkit-scrollbar-thumb {
        background-color: blue; /* color of the scroll thumb */
        border-radius: 20px; /* roundness of the scroll thumb */
        border: 3px solid orange; /* creates padding around scroll thumb */
      }

      .menu {
        display: grid;
        grid-template-columns: 70% 30%;
        align-content: center;
        background-color: lightgoldenrodyellow;
        color: black;
        padding: 5px;
        margin-top: 10px;
        border: 1px solid black;
      }
      .menu span {
        display: inline-block;
      }
    </style>
    <script defer src="../scripts/bot.js"></script>
  </head>
  <body>
    <div class="background"></div>
    <%- include('partials/header.ejs') %>
    <main>
      <!-- main content here -->
      <div class="left">
        <a href="/"><button>Go back to home</button></a>
        <div class="icon">
          <i class="fi-xnsuxl-house-solid"></i>
        </div>
        <img src="../images/chatbot2.jfif" alt="" />
      </div>
      <div class="right">
        <h2><%= username %></h2>
        <div class="chats" id="chats">
          <p class="bot">Hello, How can I help you?</p>
        </div>
        <div class="message">
          <input type="text" placeholder="type a message" id="message" />
          <button type="button" id="send">
            <i class="fi-cnsrxl-chevron-solid"></i>
          </button>
          <hr />
        </div>
      </div>
    </main>
